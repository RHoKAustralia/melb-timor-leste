<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

    <style name="activityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/app_window_padding</item>
    </style>

    <style name="contentContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="contentHeaderStyle" parent="android:TextAppearance.Large">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16px</item>
    </style>

    <style name="listViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16px</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textSize">8pt</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="redButtonStyle" parent="buttonStyle">
        <item name="android:background">@android:color/holo_red_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="greenButtonStyle" parent="buttonStyle">
        <item name="android:background">#ff00a887</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="nextButtonStyle" parent="greenButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:onClick">nextButtonClick</item>
        <item name="android:text">@string/next_button</item>
    </style>

    <style name="yesButtonStyle" parent="greenButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">yesButtonClick</item>
        <item name="android:text">@string/yes_button</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="noButtonStyle" parent="redButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">noButtonClick</item>
        <item name="android:text">@string/no_button</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>


    <style name="ListHeadingText">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/body_text_1</item>
    </style>
    <style name="ListSubText" >
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/body_text_2</item>
    </style>

    <style name="ListHeadingText.Inverse">
        <item name="android:textColor">@color/body_text_1_inverse</item>
    </style>
    <style name="ListSubText.Inverse" >
        <item name="android:textColor">@color/body_text_2_inverse</item>
    </style>
</resources>
