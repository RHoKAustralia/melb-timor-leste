<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.rhok.linguist.HomeNewActivity">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="20px"
            android:layout_alignTop="@+id/splash_start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Data"
            android:onClick="loadLanguageActivity"
            android:background="#aa0ac7"
            android:textColor="#FFFFFF"
            android:textSize="10pt"
            android:id="@+id/upload_data_button"
            android:clickable="true" />

        <Button
            android:layout_marginTop="20px"
            android:layout_alignTop="@+id/splash_start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setup"
            android:onClick="loadLanguageActivity"
            android:background="#005aa7"
            android:textColor="#FFFFFF"
            android:textSize="10pt"
            android:id="@+id/setup_language_button"
            android:clickable="true" />

        <Button
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Interview"
            android:onClick="startInterviewButton"
            android:background="#00A887"
            android:textColor="#FFFFFF"
            android:textSize="10pt"
            android:id="@+id/start_interview_button"
            android:clickable="true" />


    </LinearLayout>

</RelativeLayout>
