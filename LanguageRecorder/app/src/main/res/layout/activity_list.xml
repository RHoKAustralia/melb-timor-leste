        <ListView style="@style/listViewStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/listview" />



    <Button style="@style/nextButtonStyle" />

</LinearLayout>
