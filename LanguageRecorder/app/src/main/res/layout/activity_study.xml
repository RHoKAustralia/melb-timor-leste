<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activityStyle"
    tools:context="org.rhok.linguist.activity.old.StudyActivity">

    <LinearLayout style="@style/contentContainerStyle">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>

        <ListView style="@style/listViewStyle"
            android:id="@+id/study_list" />

    </LinearLayout>

    <Button style="@style/nextButtonStyle"
        android:id="@+id/nextbutton"
        android:onClick="nextButtonClick"/>

    <Button
        style="@style/nextButtonStyle"
        android:id="@+id/downloadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="downloadAllButtonClick"
        android:text="download all" />

</LinearLayout>
