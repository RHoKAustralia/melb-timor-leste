<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activityStyle"
    tools:context="org.rhok.linguist.SplashActivity">

    <LinearLayout style="@style/contentContainerStyle">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/splash_logo_padding"
            android:paddingRight="@dimen/splash_logo_padding"
            android:id="@+id/splashLogoImageView"
            android:contentDescription="@string/app_name" />

        <TextView android:text="@string/splash_title"
            android:textColor="#00A887"
            android:layout_weight="1"
            android:textSize="16pt"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splash_title"
            />

    </LinearLayout>

    <Button style="@style/nextButtonStyle" android:text="Start" />

</LinearLayout>
