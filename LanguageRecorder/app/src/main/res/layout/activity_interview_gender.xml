<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lachlan.myfirstapp.interview.InterviewGenderActivity">

    <LinearLayout
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingTop="40px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingBottom="40px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ita mane ka feto? (Gender?)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/list_item_selector"
            android:id="@+id/genderListView" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kontinua ->"
        android:onClick="continueButtonClick"
        android:singleLine="true"
        android:background="#00A887"
        android:textColor="#FFFFFF"
        android:textSize="12pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:clickable="true" />

</RelativeLayout>
