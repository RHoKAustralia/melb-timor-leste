<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.rhok.linguist" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="org.rhok.linguist.MyApplication">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/home_title" >
        </activity>
        <activity
            android:name=".CaptureActivity"
            android:label="@string/capture_title"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.rhok.linguist.HomeActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings_title"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CaptureActivity" />
        </activity>
        <activity
            android:name=".PersonActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.rhok.linguist.HomeActivity" />
        </activity>
        <activity
            android:name=".UploadActivity"
            android:label="@string/upload_title"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.rhok.linguist.HomeActivity" />
        </activity>
        <activity
            android:name=".PersonDeleteActivity"
            android:label="@string/delete_person_title"
            android:parentActivityName=".PersonActivity" >
        </activity>
        <activity
            android:name=".SpokenLanguageActivity"
            android:label="Select Language" >
        </activity>
        <activity
            android:name=".location.MunicipalityActivity"
            android:label="Select Municipality" >
        </activity>
        <activity
            android:name=".location.SubDistrictActivity"
            android:label="Select Sub District" >
        </activity>
        <activity
            android:name=".location.VillageActivity"
            android:label="Select Village" >
        </activity>
        <activity
            android:name=".StudyActivity"
            android:label="Select Study" >
        </activity>
        <activity
            android:name=".interview.InterviewNameActivity"
            android:label="@string/interview_title" >
        </activity>
        <activity
            android:name=".interview.InterviewAgeActivity"
            android:label="@string/interview_title" >
        </activity>
        <activity
            android:name=".interview.InterviewGenderActivity"
            android:label="@string/interview_title" >
        </activity>
        <activity
            android:name=".interview.InterviewOccupationActivity"
            android:label="@string/interview_title" >
        </activity>
        <activity
            android:name=".interview.InterviewEducationActivity"
            android:label="@string/interview_title" >
        </activity>
        <activity
            android:name=".interview.InterviewMoreLanguagesActivity"
            android:label="@string/interview_title" >
        </activity>
        <activity
            android:name=".interview.InterviewLivedLifeActivity"
            android:label="@string/interview_title" >
        </activity>
        <activity
            android:name=".interview.InterviewLivedLengthActivity"
            android:label="@string/interview_title" >
        </activity>
        <activity
            android:name=".recording.RecordingAudioActivity"
            android:label="Recording" >
        </activity>
        <activity
            android:name=".recording.RecordingInstructionsActivity"
            android:label="Recording" >
        </activity>
        <activity
            android:name=".recording.RecordingListenActivity"
            android:label="Recording" >
        </activity>
        <activity
            android:name=".recording.RecordingTranscribeActivity"
            android:label="@string/title_activity_recording_transcribe" >
        </activity>
        <activity
            android:name=".AppSettingsActivity"
            android:label="@string/title_activity_app_settings" >
        </activity>
    </application>

</manifest>
